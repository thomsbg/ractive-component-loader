{
  "name": "@berrypyramid/ractive-component-loader",
  "version": "1.0.4",
  "description": "A fork of thomsbg/ractive-component-loader that will load partials from _files the same way the browserify ractive-componentify loader does ",
  "main": "index.js",
  "scripts": {
    "test": "mocha test.js --reporter nyan",
    "unit": "mocha test.js --reporter mocha-multi --reporter-options mocha-junit-reporter=-,mochawesome=-",
    "jshint": "jshint *.js",
    "coverage": "istanbul cover _mocha",
    "release-snapshot": "npm version prerelease --no-git-tag-version",
    "release-patch": "npm version patch --no-git-tag-version",
    "release-minor": "npm version minor --no-git-tag-version",
    "release-major": "npm version major --no-git-tag-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ractive-component-loader.git"
  },
  "keywords": [
    "webpack",
    "loader",
    "ractive",
    "build"
  ],
  "bugs": {
    "url": "https://github.com/BerryPyramid/ractive-component-loader/issues"
  },
  "homepage": "https://github.com/BerryPyramid/ractive-component-loader#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "^0.4.3",
    "jshint": "^2.9.2",
    "mocha": "^2.4.5",
    "mocha-junit-reporter": "^1.11.1",
    "mocha-multi": "^0.9.0",
    "mochawesome": "^1.3.4",
    "ractive": "0.9.2"
  },
  "dependencies": {
    "clean-css": "3.x",
    "rcu": "0.9.0",
    "tosource": "0.x"
  }
}
